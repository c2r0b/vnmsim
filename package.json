{
  "name": "vnmsim",
  "version": "2.4.0",
  "description": "A simulator of the Von Neumann machine",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:wasm && npm run dev:next",
    "dev:next": "next dev",
    "build": "./build.sh",
    "build:next": "next build",
    "build:wasm": "cd ./src-tauri/shared && wasm-pack build --target web --features wasm && cd ../../",
    "build:wasm-node": "cd ./src-tauri/shared && wasm-pack build --target nodejs --out-dir pkg_node --features wasm && cd ../../",
    "start": "next start",
    "lint": "next lint",
    "tauri": "tauri",
    "test": "npm run build:wasm-node && jest"
  },
