{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": false,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "src": ["/src/"]
    },
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "jsx": "react",
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": "./"
  }
}
