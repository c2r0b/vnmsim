{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": false,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "src": [
        "/src/"
      ],
      "src-tauri": [
        "/src-tauri/"
      ],
      "public": [
        "/public/"
      ]
    },
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
